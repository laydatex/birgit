:root

	--color-bg #eee
	--color-text #444

	--color-accent #ff4c22
	--color-accent-text #fff
	--color-accent-1 #fd623e
	--color-accent-2 #da3109

	--color-button #989
	--color-button-text #fff
	--color-button-1 #009
	--color-button-2 #888

	--color-border rgba(#000, .1)

	--font-size 1.6rem
	--font-size-small 1.1rem
	--font-size-large 2rem

	--radius .4rem

	font-family 'Helvetica Neue', sans-serif
	font-size 10px

*
	box-sizing border-box

body
	margin 0
	font-size var(--font-size)
	background var(--color-bg)
	color var(--color-text)
	overflow hidden

h1
	font-size var(--font-size-large)
	font-family 'Bungee', sans-serif

h2
	font-size var(--font-size)
	font-family 'Bungee', sans-serif


.a
	color var(--color-accent)
	text-decoration underline
	font-size inherit
	border 0
	padding 0
	background none
	cursor pointer

	&.-secondary
		color var(--color-text)
		text-decoration underline

	&:hover
		text-decoration none

.button
	background-color var(--color-button)
	color var(--color-button-text)
	text-transform uppercase
	font-weight bold
	font-size var(--font-size)
	padding .5rem 1rem
	min-width 2.6rem
	height 2.6rem
	border 0
	border-radius var(--radius)
	cursor pointer
	transition background-color .3s
	user-select none

	&.-left
		border-radius var(--radius) 0 0 var(--radius)

	&.-right
		border-radius 0 var(--radius) var(--radius) 0

	&:hover
		background-color var(--color-accent-1)

	&:active
		background-color var(--color-accent-2)

	&:disabled
		opacity .5
		pointer-events none

	&.-submit
		background-color var(--color-accent)
		color var(--color-accent-text)
		padding 1.5rem 2.5rem
		font-size var(--font-size-large)
		height auto
		box-shadow 0 .4rem 0 var(--color-accent-2), 0 .5rem 1rem -.1rem rgba(#000, .4)
		transition box-shadow .3s, background-color .3s

		&:hover
			background-color var(--color-accent-1)

		&:active
			background-color var(--color-accent-2)


.input
	font inherit
	font-size 2rem
	text-align start
	border solid 1px rgba(#000, .2)
	border-radius var(--radius)
	text-align start
	display block
	height 5rem
	padding .5rem 1rem
	margin 2rem auto
	background-color #fff
	transition border-color .2s
	width 35rem

	&:hover
	&:focus
		outline 0
		border-color rgba(#000, .4)

	&[type="number"]
		border-radius 0
		border 0
		height 2.6rem
		padding .2rem
		font-size var(--font-size)
		text-align center
		-webkit-appearance textfield
		-moz-appearance textfield
		appearance textfield

	&::-webkit-inner-spin-button
	&::-webkit-outer-spin-button
		-webkit-appearance none

	&.-error
		border-color var(--color-accent)

.table
	margin 0 auto
	max-width 70rem

	&__header
	&__row
		display grid
		grid-template-columns auto 6rem 10rem 5rem
		grid-column-gap 1rem
		grid-row-gap .5rem
		border-bottom solid 1px var(--color-border)
		padding .4rem .8rem
		min-height 4rem

		&__name
		&__bottle
		&__boxe
		&__prize
			display flex
			align-items center
			justify-content flex-end

		&__name
			justify-content flex-start

		&__bottle

		&__prize
			justify-content flex-end

		&__boxes
			display flex
			align-items center
			justify-content center

			.input
				width 3rem
				margin 0

	&__header
		font-size var(--font-size-small)
		font-weight bold
		text-transform uppercase

	&__header
	&__row
		grid-template-columns auto 10rem 5rem
		grid-template-rows 1fr 1fr

		&__name
			grid-area 1 / 1 / 2 / 2

		&__bottle
			grid-area 2 / 1 / 3 / 2
			justify-content flex-start

		&__boxes
			grid-area 1 / 2 / 3 / 3

		&__prize
			grid-area 1 / 3 / 3 / 4

.overlay
	background-color rgba(#fff, .5)
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	display flex
	justify-content center
	align-items center

	&__close
		position absolute
		top 0
		right 0
		bottom 0
		left 0

.modal
	position relative
	background #fff
	padding 5rem
	width 80%
	max-width 64rem
	border-radius 1rem
	box-shadow 0 .5rem 1.5rem 0 rgba(#000, .2)
	text-align center
	z-index 2

	&__close
		position absolute
		top -1.5rem
		right -1.5rem
		width 3rem
		height 3rem
		background-color var(--color-button)
		color var(--color-button-text)
		box-shadow 0 .5rem 1.5rem 0 rgba(#000, .2)
		border-radius 5rem
		border 0
		cursor pointer
		transition background-color .3s

		&:hover
			background-color var(--color-accent)

.page
	margin 0 auto
	text-align center

.cart
	background-color #fff
	position fixed
	bottom 0
	right 0
	left 0
	height 10rem
	padding 0 4rem
	z-index 9
	box-shadow 0 -6px 20px -6px rgba(#000, .2)

	&__inner
		max-width 70rem
		height 100%
		margin 0 auto
		display flex
		align-items center
		justify-content space-between

	&__total
		font-size 2.4rem
		font-weight bold
		color var(--color-accent)
		position relative
		line-height 2.4rem

	&__euro
		position absolute
		left 100%
		padding 0 .5rem
		color var(--color-text)
